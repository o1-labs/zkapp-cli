{
  "name": "snapp-cli",
  "version": "0.1.26",
  "description": "CLI to create a snapp (\"snark app\") for Mina Protocol.",
  "author": "O(1) Labs",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [
    "mina",
    "snapps",
    "snapp",
    "snap"
  ],
  "bin": {
    "snapp": "./src/bin/index.js",
    "snapp-cli": "./src/bin/index.js"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "node src/postinstall",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --silent",
    "test:all": "./runTests.sh",
    "testw": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch --silent",
    "coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "format": "prettier --write --ignore-unknown **/*"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "envinfo": "^7.8.1",
    "fs-extra": "^10.0.0",
    "gittar": "^0.1.1",
    "ora": "^5.4.1",
    "shelljs": "^0.8.4",
    "snarkyjs": "^0.2.0",
    "yargs": "^17.2.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "**/*": [
      
      "prettier --write --ignore-unknown"
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ]
  }
}
